<?xml version="1.0" encoding="utf-8"?>
<!--
Accounts Recycler View Item
Shared View for both Bank Accounts and Card Accounts Recycler Views
Data binding is used to populate Details Title and Description in RecyclerViewAdapter.onBindViewHolder()
Account Icon is programmatically updated in RecyclerViewAdapter.onBindViewHolder()
 -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="binding_recyclerItemTitle"
            type="String" />
        <variable
            name="binding_recyclerItemDesc"
            type="String" />
        <variable
            name="binding_recyclerItemType"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itemWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/account_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingEnd="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/account_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:padding="1dp"
                android:text="@{binding_recyclerItemTitle}"
                android:textColor="@color/dark_grey_text"
                android:textSize="14sp"
                app:layout_constraintLeft_toRightOf="@id/account_icon"
                app:layout_constraintRight_toLeftOf="@id/rightArrowButton"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/account_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:padding="1dp"
                android:text="@{binding_recyclerItemDesc}"
                android:textColor="@color/dark_grey_text"
                android:textSize="12sp"

                app:layout_constraintLeft_toLeftOf="@id/account_title"
                app:layout_constraintRight_toRightOf="@id/account_title"
                app:layout_constraintTop_toBottomOf="@id/account_title" />


            <TextView
                android:id="@+id/account_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:padding="1dp"
                android:text="@{binding_recyclerItemType}"
                android:textColor="@color/light_grey_text"
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@id/account_desc"
                app:layout_constraintRight_toRightOf="@id/account_desc"
                app:layout_constraintTop_toBottomOf="@id/account_desc" />

            <ImageButton
                android:id="@+id/rightArrowButton"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:clickable="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_divider"
            app:layout_constraintBottom_toBottomOf="parent" />
    </LinearLayout>
</layout>
