<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeViewFragment">
    <fragment
        android:id="@+id/detailViewFragment"
        android:name="com.veryable.android.view.fragments.DetailViewFragment"
        android:label="DETAILS"
        tools:layout="@layout/fragment_detail_view">
        <action
            android:id="@+id/action_detailViewFragment_to_homeViewFragment"
            app:destination="@id/homeViewFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/homeViewFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="accountName"
            app:argType="string"
            android:defaultValue='"TEST"' />
        <argument
            android:name="accountDesc"
            app:argType="string"
            android:defaultValue='"TEST"' />
        <argument
            android:name="accountIcon"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/homeViewFragment"
        android:name="com.veryable.android.view.fragments.HomeViewFragment"
        android:label="ACCOUNTS"
        tools:layout="@layout/fragment_home_view">
        <action
            android:id="@+id/action_homeViewFragment_to_detailViewFragment"
            app:destination="@id/detailViewFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
</navigation>